# ArchDoc Generator Environment Variables

# LLM Provider Configuration
ARCHDOC_LLM_PROVIDER=anthropic  # anthropic | openai | google
ARCHDOC_LLM_MODEL=claude-3-5-sonnet-20241022
ARCHDOC_LLM_TEMPERATURE=0.2
ARCHDOC_LLM_MAX_TOKENS=4096

# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# LangSmith Tracing (optional)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=architecture-doc-generator

# Cache Configuration
ARCHDOC_CACHE_ENABLED=true
ARCHDOC_CACHE_TYPE=file  # file | memory
ARCHDOC_CACHE_TTL=3600
ARCHDOC_CACHE_DIR=.archdoc-cache

# Output Configuration
ARCHDOC_OUTPUT_DIR=./docs/architecture
ARCHDOC_OUTPUT_FORMAT=markdown  # markdown | json | html | confluence

# Scanning Configuration
ARCHDOC_MAX_FILE_SIZE=1048576  # 1MB in bytes
ARCHDOC_MAX_FILES=1000
ARCHDOC_EXCLUDE_PATTERNS=node_modules,dist,build,.git

# Token Management
ARCHDOC_MAX_INPUT_TOKENS=100000
ARCHDOC_TOKEN_BUFFER=10000

# Logging
ARCHDOC_LOG_LEVEL=info  # debug | info | warn | error
ARCHDOC_LOG_FILE=.archdoc.log
